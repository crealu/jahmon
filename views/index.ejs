<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
  <title>Jahmon</title>
  <meta name="description" content="Music tablature application.">
  <link rel="stylesheet" type="text/css" href="css/style.css">
</head>
<body>
  <div class="jel topbar">
    <div class="current-title" data-isnew="new"></div>
    <div class="sequence-wrapper"></div>
    <button class="jel topbar-btn topbar-save-btn">Save</button>
    <button class="jel topbar-btn topbar-clear-btn">Clear</button>
  </div>

  <div class="jel sidebar">
    <h3 class="sidebar-title">Sequences</h3>
    <div class="saved-sequences">
      <% if (data != undefined) { %>
        <% for (var i = 0; i < data.jahms.length; i++) { %>
          <div
            class="sequence saved-sequence"
            data-noteids="<%= data.jahms[i].noteids %>"
            data-steps="<%= data.jahms[i].steps %>"
          >
            <p class="sequence-title"><%= data.jahms[i].title %></p>
          </div>
        <% } %>
        <button class="sequence new-sequence">NEW</button>
      <% } %>
    </div>
  </div>

  <button class="jel fretboard-top-btn chord-btn">Chord</button>
  <button class="jel fretboard-top-btn riff-btn">Riff</button>

  <div class="jel fretboard"></div>
  <div class="jel riff-numbers"></div>

  <button class="jel fretboard-bottom-btn set-btn">Set</button>
  <button class="jel fretboard-bottom-btn clear-btn">Clear</button>


  <form class="save-form" method="POST" action="/save">
    <h3>Save Sequence</h3>
    <input name="noteids" class="save-input noteids-input">
    <input name="steps" class="save-input steps-input">
    <label for="title">Title</label>
    <input name="title" class="save-input title-input">
    <br>
    <button id="submit">Submit</button>
    <button id="cancel">Cancel</button>
  </form>

  <script type="text/javascript" src="js/fretboard.js"></script>
  <script type="text/javascript" src="js/main.js"></script>
</body>
</html>
